<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta</p>

          <%- include('includes/messages') %>

          <div class="row">
            <div class="col-lg">
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não tem conta, preencha o formulário abaixo</p>
              <form action="/login/register" method="post">
                <input type="text" name="_csrf" value=<%=csrfToken %> hidden>
                <div class="form-group">
                  <label>Seu e-email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary mt-2">Criar minha conta</button>
              </form>
            </div>


            <div class="col-lg">
              <h4>Faça seu login</h4>
              <p>Se você já tem conta, faça seu login abaixo</p>
              <form action="/login/login" method="post">
                <input type="text" name="_csrf" value=<%=csrfToken %> hidden>
                <div class="form-group">
                  <label>Seu e-email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary mt-2">Entrar</button>
              </form>
            </div>
          </div>


        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>
    <%- include('includes/footer') %>